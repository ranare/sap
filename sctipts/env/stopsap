#!/bin/csh

setenv INS_NUM_ASCS `ls -la /usr/sap/$SAPSYSTEMNAME | egrep '$SAPSYSTEMNAME|ASCS' | awk '{print $NF}' | grep -o '..$'`
setenv INS_NUM_PAS `ls -la /usr/sap/$SAPSYSTEMNAME | egrep '$SAPSYSTEMNAME|D' | awk '{print $NF}' | grep -o '..$'`


sapcontrol -nr $INS_NUM_PAS -function Stop
sapcontrol -nr $INS_NUM_ASCS -function Stop 
